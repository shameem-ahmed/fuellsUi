@{
    ViewBag.Title = "Supplier";
}

<input type="hidden" id="hidSelMenu" value="liPageSupplier" />
<input type="hidden" id="hidSelUser" value="000" />

<div class="row">

    <!-- SUPPLIER TABLE, GOVT CODES, OFFICE & OFF PERSONS -->
    <div class="col-md-8" id="divTable">
        
        <div class="row">
            <!-- SUPPLIER TABLE -->
            <div class="col-md-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <button type="button" class="btn btn-primary" id="btnSuppNew">New Supplier</button>
                        <button type="button" class="btn btn-info" id="btnSuppEdit">Edit</button>
                        <button type="button" class="btn btn-danger" id="btnSuppDelete">Delete</button>
                        <ul class="panel-controls">
                            <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                            <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
                        </ul>
                    </div>

                    <div class="panel-body">
                        <table class="table DataTable" id="tblSupplier">
                            <thead>
                                <tr>
                                    <th width="20%">Supplier name</th>
                                    <th width="15%">Code</th>
                                    <th width="20%">Website</th>
                                    <th width="25%">Email</th>
                                    <th width="20%">Phone</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <!-- GOVT CODES -->
                    <div class="col-md-12">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <button type="button" class="btn btn-primary" id="btnCodeNew">New Code</button>
                                <button type="button" class="btn btn-info" id="btnCodeEdit">Edit</button>
                                <button type="button" class="btn btn-danger" id="btnCodeDelete">Delete</button>
                                <ul class="panel-controls">
                                    <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                                    <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
                                </ul>
                            </div>

                            <div class="panel-body">
                                <table class="table DataTable" id="tblCode">
                                    <thead>
                                        <tr>
                                            <th width="20%">Govt Code</th>
                                            <th width="15%">Type</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- OFFICES  -->
                    <div class="col-md-12">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <button type="button" class="btn btn-primary" id="btnOffNew">New Office</button>
                                <button type="button" class="btn btn-info" id="btnOffEdit">Edit</button>
                                <button type="button" class="btn btn-danger" id="btnOffDelete">Delete</button>
                                <ul class="panel-controls">
                                    <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                                    <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
                                </ul>
                            </div>

                            <div class="panel-body">
                                <table class="table DataTable" id="tblOffice">
                                    <thead>
                                        <tr>
                                            <th width="20%">Office title</th>
                                            <th width="20%">Phone</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- OFF PERSONS -->
                    <div class="col-md-12">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <button type="button" class="btn btn-primary" id="btnPersonNew">New Person</button>
                                <button type="button" class="btn btn-info" id="btnPersonEdit">Edit</button>
                                <button type="button" class="btn btn-danger" id="btnPersonDelete">Delete</button>
                                <ul class="panel-controls">
                                    <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                                    <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
                                </ul>
                            </div>

                            <div class="panel-body">
                                <table class="table DataTable" id="tblPerson">
                                    <thead>
                                        <tr>
                                            <th width="20%">Name</th>
                                            <th width="20%">Phone</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
      
    </div>

    <!--SUPPLIER EDIT PANELS -->
    <div class="col-md-4" id="divUpdate">
        
        <div class="panel panel-primary" id="divEditSupplier">
            <div class="panel-heading">
                <h4>Supplier details</h4>
            
            </div>

            <div class="panel-body">
                <!-- SUPPLIER form -->
                <form class="form-horizontal" action="#" role="form" id="frmSupplier">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Supplier name</label>
                        <div class="col-md-9">
                            <input type="text" id="txtLogin" class="form-control" placeholder="Supplier Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Code</label>
                        <div class="col-md-9">
                            <input type="text" id="txtPwd1" class="form-control" placeholder="Code" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Website</label>
                        <div class="col-md-9">
                            <input type="text" id="txtPwd2" class="form-control" placeholder="Website" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input type="text" id="txtEmail" class="form-control" placeholder="Email Address" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Phone</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                <input type="text" id="txtPhone" class="form-control" placeholder="Phone" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Fax</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-facebook"></i></span>
                                <input type="text" id="txtFacebook" class="form-control" placeholder="Fax" />
                            </div>
                        </div>
                    </div>
                
                </form>
            </div>
            <div class="panel-footer">
                <button id="btnSuppUpdateCancel" class="btn btn-link pull-right">Cancel</button>
                <button id="btnSuppUpdateSave" class="btn btn-primary pull-right">Save Changes <span class="fa fa-floppy-o fa-right"></span></button>
            </div>
        </div>

        <div class="panel panel-info" id="divEditCode">
            <div class="panel-heading">
                <h4>Code details</h4>

            </div>

            <div class="panel-body">

            </div>
        </div>

        <div class="panel panel-info" id="divEditOffice">
            <div class="panel-heading">
                <h4>Office details</h4>

            </div>

            <div class="panel-body">

            </div>
        </div>

        <div class="panel panel-info" id="divEditPerson">
            <div class="panel-heading">
                <h4>Person details</h4>

            </div>

            <div class="panel-body">

            </div>
        </div>
    </div>
</div>