    ViewBag.Title = "User";
}
<input type="hidden" id="hidSelMenu" value="liPageUser" />
<input type="hidden" id="hidSelUser" value="000" />

<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Company</a></li>
    <li class="active">Users</li>
</ul>
