@{
    ViewBag.Title = "Job Card";
}
<input type="hidden" id="hidSelMenu" value="liPageJC" />
<input type="hidden" id="hidSelUser" value="000" />

<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Company</a></li>
    <li class="active">Job Card</li>
</ul>
<div class="page-content-wrap">
    <div class="row" id="divList">
        <div class="col-md-12" id="divTable">
            <div class="page-title">
                <h2><span class="fa fa-arrow-circle-o-left"></span> @ViewBag.Title</h2>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <table border="0" style="width:100%; color:red;">
                        <tr>
                            <td style="width:25%;">Purchase Order /</td>
                        </tr>
                        <tr>
                            <td>
                                <select id="selPO" class="form-control select"></select>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%;">Style /</td>
                        </tr>
                        <tr>
                            <td>
                                <select id="selPOStyle" class="form-control select"></select>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%;">Size /</td>
                        </tr>
                        <tr>
                            <td>
                                <select id="selPOSize" class="form-control select"></select>
                            </td>
                          
                        </tr>
                        <tr>
                            <td style="width:25%;">Job Card /</td>
                        </tr>
                        <tr>
                            <td>
                                <div class="list-group" id="divJC">
                                </div>
                                <button id="btnGenerateJC" type="button" class="btn btn-primary">New Item</button>
                            </td>
                        </tr>

                    </table>
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-lg-3">
                            <table class="tableEdit">
                                <tr>
                                    <td>Job Card # /</td>
                                </tr>
                                <tr>
                                    <td><h3 id="h3JCNo">112.1</h3></td>
                                </tr>
                                <tr>
                                    <td>Start Date /</td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" id="txtDateStart" class="form-control datepicker" placeholder="Start Date" value="" data-date="" data-date-format="dd-mm-yyyy" required />
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>End Date /</td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" id="txtDateEnd" class="form-control datepicker" placeholder="End Date" value="" data-date="" data-date-format="dd-mm-yyyy" required />
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Style /<span class="pull-right">Size /</span></td>
                                </tr>
                                <tr>
                                    <td>
                                        <table style="width:100%;">
                                            <tr>
                                                <td><h3 id="h3JCStyle">---</h3></td>
                                                <td><h3 class="pull-right" id="h3JCSize">---</h3></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-lg-9">
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    <h4 id="h4PoOrderType">Purchase Order</h4>
                                </div>
                                <div class="panel-body">
                                    <table class="tableEdit" border="0">
                                        <tr>
                                            <td>
                                                <table class="tableEdit" border="0">
                                                    <tr>
                                                        <td>Customer /</td>
                                                        <td>Invoice # /</td>
                                                        <td>Quantity /</td>
                                                    </tr>
                                                    <tr>
                                                        <td><h3 id="h4PoCustomer"></h3></td>
                                                        <td><h3 id="h4PoInvoiceNo"></h3></td>
                                                        <td><h3 id="h4PoQty"></h3></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Order Date /</td>
                                                        <td>Delivery Date /</td>
                                                        <td>Target Date /</td>
                                                    </tr>
                                                    <tr>
                                                        <td><h3 id="h4PoDateOrder">---</h3></td>
                                                        <td><h3 id="h4PoDateDelivery">---</h3></td>
                                                        <td><h3 id="h4PoDateTarget">---</h3></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td>
                                                <table border="0" class="table" style="width:100%;">
                                                    <thead>
                                                        <tr class="info">
                                                            <th><strong style="color:#000;">Internal details</strong></th>
                                                            <th><strong style="color:#000;">Priority</strong></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tblPoInternal2">
                                                    </tbody>
                                                </table>

                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="panel panel-default">
                                <div id="divCutting" class="panel-heading ui-draggable-handle" style="background-color:#95b75d;">
                                    <h3 class="panel-title" style="color:#fff;">Cutting &amp; Fusing</h3>
                                </div>
                                <div class="panel-body">
                                    <label>Date:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        <input type="text" class="form-control datepicker" id="txtCuttingDate" value="2017-05-22">
                                    </div>
                                    <label>Matcher:</label>
                                    <select id="selCuttingMatcher" class="form-control select"></select>
                                    <label>Cutter:</label>
                                    <select id="selCuttingCutter" class="form-control select"></select>
                                    <label>Fuser:</label>
                                    <select id="selCuttingFuser" class="form-control select"></select>
                                    <label>Remarks:</label>
                                    <textarea class="form-control" id="txtCuttingNotes" rows="5"></textarea>
                                    <span class="help-block">Worker remarks</span>

                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-danger" id="btnCuttingNotDone">Not Done</button>
                                    <button class="btn btn-success pull-right" id="btnCuttingDone">Done</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="panel panel-default">
                                <div id="divLining" class="panel-heading ui-draggable-handle" style="background-color:#95b75d;">
                                    <h3 class="panel-title" style="color:#fff;">Lining Cutting</h3>
                                </div>
                                <div class="panel-body">
                                    <label>Date:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        <input type="text" class="form-control datepicker" id="txtLiningDate" value="2017-05-22">
                                    </div>
                                    <label>Cutter:</label>
                                    <select id="selLiningCutter" class="form-control select"></select>
                                    <label>Remarks:</label>
                                    <textarea class="form-control" id="txtLiningNotes" rows="5"></textarea>
                                    <span class="help-block">Worker remarks</span>

                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-danger" id="btnLiningNotDone">Not Done</button>
                                    <button class="btn btn-success pull-right" id="btnLiningDone">Done</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="panel panel-default">
                                <div id="divStore" class="panel-heading ui-draggable-handle" style="background-color:#95b75d;">
                                    <h3 class="panel-title" style="color:#fff;">Store</h3>
                                </div>
                                <div class="panel-body">
                                    <label>Date:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        <input type="text" class="form-control datepicker" id="txtStoreDate" value="2017-05-22">
                                    </div>
                                    <label>Issued by:</label>
                                    <select id="selStoreIssuedBy" class="form-control select"></select>
                                    <label>Received by:</label>
                                    <select id="selStoreReceivedBy" class="form-control select"></select>
                                    <label>Remarks:</label>
                                    <textarea class="form-control" id="txtStoreNotes" rows="5"></textarea>
                                    <span class="help-block">Worker remarks</span>

                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-danger" id="btnStoreNotDone">Not Done</button>
                                    <button class="btn btn-success pull-right" id="btnStoreDone">Done</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="panel panel-default">
                                <div id="divTailoring" class="panel-heading ui-draggable-handle" style="background-color:#95b75d;">
                                    <h3 class="panel-title" style="color:#fff;">Tailoring</h3>
                                </div>
                                <div class="panel-body">
                                    <label>Date:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        <input type="text" class="form-control datepicker" id="txtTailoringDate" value="2017-05-22">
                                    </div>
                                    <label>Tailor:</label>
                                    <select id="selTailoringTailor" class="form-control select"></select>
                                    <label>Lice QC:</label>
                                    <select id="selTailoringQc" class="form-control select"></select>
                                    <label>Status:</label>
                                    <select id="selTailoringStatus" class="form-control select">
                                        <option value="ok">OK</option>
                                        <option value="alter">Alteration</option>
                                    </select>

                                    <label>Remarks:</label>
                                    <textarea class="form-control" id="txtTailoringeNotes" rows="5"></textarea>
                                    <span class="help-block">Worker remarks</span>

                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-danger" id="btnTailoringNotDone">Not Done</button>
                                    <button class="btn btn-success pull-right" id="btnTailoringDone">Done</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="panel panel-default">
                                <div id="divInspection" class="panel-heading ui-draggable-handle" style="background-color:#95b75d;">
                                    <h3 class="panel-title" style="color:#fff;">Inspection</h3>
                                </div>
                                <div class="panel-body">
                                    <label>Date:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        <input type="text" class="form-control datepicker" id="txtInspectionDate" value="2017-05-22">
                                    </div>
                                    <label>QC done by:</label>
                                    <select id="selInspectionQc" class="form-control select"></select>
                                    <label>Status:</label>
                                    <select id="selInspectionStatus" class="form-control select">
                                        <option value="ok">OK</option>
                                        <option value="alter">Alteration</option>
                                    </select>
                                    <label>Remarks:</label>
                                    <textarea class="form-control" id="txtInspectionNotes" rows="5"></textarea>
                                    <span class="help-block">Worker remarks</span>

                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-danger" id="btnInspectionNotDone">Not Done</button>
                                    <button class="btn btn-success pull-right" id="btnInspectionDone">Done</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="panel panel-default">
                                <div id="divPacking" class="panel-heading ui-draggable-handle" style="background-color:#95b75d;">
                                    <h3 class="panel-title" style="color:#fff;">Packing</h3>
                                </div>
                                <div class="panel-body">
                                    <label>Date:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        <input type="text" class="form-control datepicker" id="txtPackingDate" value="2017-05-22">
                                    </div>
                                    <label>Packed by:</label>
                                    <select id="selPackingPackedBy" class="form-control select"></select>
                                    <label>Status:</label>
                                    <select id="selPackingStatus" class="form-control select">
                                        <option value="ok">OK</option>
                                        <option value="alter">Alteration</option>
                                    </select>
                                    <label>Remarks:</label>
                                    <textarea class="form-control" id="txtPackingNotes" rows="5"></textarea>
                                    <span class="help-block">Worker remarks</span>

                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-danger" id="btnPackingNotDone">Not Done</button>
                                    <button class="btn btn-success pull-right" id="btnPackingDone">Done</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
